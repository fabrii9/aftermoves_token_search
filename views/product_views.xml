<odoo>

    <!-- Agregar campo token_search a la vista de búsqueda de product.template -->
    <record id="product_template_search_token_search" model="ir.ui.view">
        <field name="name">product.template.search.token.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            
            <!-- Agregar el campo token_search al principio de la búsqueda -->
            <xpath expr="//search/field[@name='name']" position="before">
                <field 
                    name="token_search" 
                    string="Búsqueda Inteligente (tokens)"
                    filter_domain="[('token_search', 'ilike', self)]"
                />
            </xpath>
            
        </field>
    </record>

    <!-- Agregar campo token_search a la vista de búsqueda de product.product -->
    <record id="product_product_search_token_search" model="ir.ui.view">
